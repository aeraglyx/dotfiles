    ],
    "custom/os": {
        "format": "Ôåì",
        "tooltip-format": "btw"
    },
    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        // "ignore-workspaces": ["9"]
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "tooltip-format": "{title}",
        "icon-size": 17,
        "on-click": "activate",
        "on-click-middle": "close",
        // "ignore-list": [
        //     "kitty"
        // ],
    },
    "hyprland/window": {
        "format": "{class} | {title}",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "$1",
            "(.*)Mozilla Firefox.*": "$1New Tab",
            "(.*) ‚Äî Tor Browser": "$1",
            "(.*) - Blender .*": "$1",
        },
        "max-length": 64,
        "separate-outputs": true
    },
    "custom/spotify": {
        "format": "ÔÜº  {}",
        "tooltip": false,
        "exec": "python ~/.config/waybar/scripts/song.py",
        "interval": 1,
        "on-click": "hyprctl dispatch workspace 4"
    },
    "custom/nightlight": {
        "format": "ÔÉ´ {}",
        // "tooltip": false,
        "exec": "python ~/.config/waybar/scripts/night_light.py",
        "return-type": "json",
        "interval": 300
